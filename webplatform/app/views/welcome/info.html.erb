<div class="hero-unit" style="padding-top:20px;padding-bottom:20px;padding-left:40px;padding-right:40px;">
	<h1><%=@serviceSelected.title%> 
		<% if @unit["url"] %>
			<%=link_to "Link", @unit["url"], target: "_blank", class: "btn btn-primary"%>
		<% end %>
	</h1>
	<p><%=@unit["description"]%></p>
	<% if @unit["teachers"].size>0 %>
	<p><h5>with 
		<% @unit["teachers"].each do |t| %>
			<%= t["name"] %>
		<% end %>
	</h5></p>
	<%end%>
</div>
<div class="well">
	<div style="clear:both;">
		<p style="float: left;"><strong>Language:&nbsp;&nbsp;&nbsp;&nbsp;</strong> <%=@unit["language"]%></p>
		<p style="float: right;"><strong>Delivery Mode:&nbsp;&nbsp;&nbsp;&nbsp;</strong> <%=@unit["delivery"]%> </p>
	</div>
</div>
<div class="well">
	<p style="margin-bottom:1px"><strong>Objective</strong></p><p><%=@unit["obj"]["description"]%> </p>
	<p style="margin-bottom:1px"><strong>Bloom's Taxonomy Classification</strong></p>
	<p style="margin-bottom:1px"><strong>Cognitive Dimension:&nbsp;&nbsp;&nbsp;&nbsp;</strong><span <%=@unit["obj"]["cogn"] ? "rel='tooltip' title='"+@unit["obj"]["cogn"]["description"]+"'": "" %> ><%=@unit["obj"]["cogn"] ? @unit["obj"]["cogn"]["label"]+"<i class=\"icon-hand-up\"></i>" : "None"%></span></p>
	<p><strong>Knowledge Dimension:&nbsp;&nbsp;&nbsp;&nbsp;</strong><span <%=@unit["obj"]["know"] ? "rel='tooltip' title='"+@unit["obj"]["know"]["description"]+"'": "" %> ><%=@unit["obj"]["know"] ? @unit["obj"]["know"]["label"] : "None"%></p>
	<div align="center">
		<div id="my_id2" ><%= high_chart("my_id2", @graphOverall) %></div>
	</div>
</div>

<div class="well">
	<div class="well" ><%= high_chart("my_id", @graphObjectives) %></div>
<div class="row-fluid">
<div class="span6">
	<% count=0 %>
	<%@unit["obj"]["parts"].each do |part|%>
		<%if count % 2 == 0 %>
			<div class="well">
				<span class="badge pull-right"><%=count+1%></span>
			<p style="margin-bottom:1px"><strong>Phrase:</strong></p><p><%=part["description"]%></p>
			<p style="margin-bottom:1px"><strong>Bloom's Taxonomy Classification:</strong></p>
				<p style="margin-bottom:1px"><strong>Cognitive Dimension:&nbsp;&nbsp;&nbsp;&nbsp;</strong><span <%=part["cogn"] ? "rel='tooltip' title='"+part["cogn"]["description"]+"'": "" %> >
					<%=part["cogn"] ? part["cogn"]["label"] : "None"%></span></p>
				<p><strong>Knowledge Dimension:&nbsp;&nbsp;&nbsp;&nbsp;</strong><span <%=part["know"] ? "rel='tooltip' title='"+part["know"]["description"]+"'": "" %> >
					<%=part["know"] ? part["know"]["label"] : "None"%></p>
			<p style="margin-bottom:1px"><strong>Educational Areas:</strong></p><p>
			<%if part["context"].size==0 %>
				None<br>
			<%else%>
				<%part["context"].each do |c|%>
					<%=c["label"]%><br>
				<%end%>
			<%end%>
			</p>
		</div>
		<%end%>
		<% count+=1 %>
	<%end%>
</div>
<div class="span6">
	<% count=0 %>
	<%@unit["obj"]["parts"].each do |part|%>
		<%if count % 2 != 0 %>
			<div class="well">
				<span class="badge pull-right"><%=count+1%></span>
			<p style="margin-bottom:1px"><strong>Phrase:</strong></p><p><%=part["description"]%></p>
			<p style="margin-bottom:1px"><strong>Bloom's Taxonomy Classification:</strong></p>
				<p style="margin-bottom:1px"><strong>Cognitive Dimension:&nbsp;&nbsp;&nbsp;&nbsp;</strong><span <%=part["cogn"] ? "rel='tooltip' title='"+part["cogn"]["description"]+"'": "" %> >
					<%=part["cogn"] ? part["cogn"]["label"] : "None"%></span></p>
				<p><strong>Knowledge Dimension:&nbsp;&nbsp;&nbsp;&nbsp;</strong><span <%=part["know"] ? "rel='tooltip' title='"+part["know"]["description"]+"'": "" %> >
					<%=part["know"] ? part["know"]["label"] : "None"%></p>
			<p style="margin-bottom:1px"><strong>Educational Areas:</strong></p><p>
			<%if part["context"].size==0 %>
				None<br>
			<%else%>
				<%part["context"].each do |c|%>
					<%=c["label"]%><br>
				<%end%>
			<%end%>
			</p>
		</div>
		<%end%>
		<% count+=1 %>
	<%end%>
</div>
</div>
</div>
